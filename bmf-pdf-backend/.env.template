# ============================================
# PDF Service Configuration Template
# ============================================
# Copy this file to .env and customize for your company

# ============================================
# Server Configuration
# ============================================
PORT=4000
HOST=0.0.0.0

# ============================================
# Security - CHANGE THIS!
# ============================================
# Generate secure API key: openssl rand -base64 32
API_KEY=CHANGE_THIS_TO_SECURE_API_KEY

# ============================================
# Directories
# ============================================
# Local Development:
TEMPLATE_DIR=./pdf_templates
OUTPUT_DIR=./customers

# Production (VPS):
# TEMPLATE_DIR=/var/www/pdf-service/pdf_templates
# OUTPUT_DIR=/var/www/pdf-service/customers

# ============================================
# Public URLs
# ============================================
# Local Development:
PUBLIC_BASE_URL=http://localhost:4000/customers
STATIC_PREFIX=/customers

# Production:
# PUBLIC_BASE_URL=https://yourcompany.com/customers
# STATIC_PREFIX=/customers

# ============================================
# Logging
# ============================================
# Options: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# Upload Configuration
# ============================================
MAX_UPLOAD_SIZE_MB=15

# ============================================
# Webhook Configuration
# ============================================
# Example: Boost.space, Make.com, Zapier, etc.
WEBHOOK_URL=https://hook.integrator.boost.space/YOUR_WEBHOOK_ID
WEBHOOK_ENABLED=true
WEBHOOK_TIMEOUT_MS=5000

# ============================================
# Auto Cleanup Configuration
# ============================================
# Enable automatic deletion of old PDFs
AUTO_CLEANUP_ENABLED=true

# Delete immediately after sending response
CLEANUP_AFTER_RESPONSE=true

# How long to keep files (minutes)
CLEANUP_RETENTION_MINUTES=15

# How often to check for old files (milliseconds)
# 60000 = 1 minute
CLEANUP_CHECK_INTERVAL_MS=60000

# ============================================
# Notes for Different Companies
# ============================================
# 1. Generate unique API key for each company
# 2. Use separate webhook URL for each company
# 3. Update PUBLIC_BASE_URL to company domain
# 4. Customize CLEANUP_RETENTION_MINUTES based on needs
# 5. Set LOG_LEVEL=debug for testing, info for production
